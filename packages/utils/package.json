{
  "name": "@emilia-tan/utils",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "swc src -d dist && pnpm run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts || echo 'No files to lint.'",
    "format": "prettier --write src/**/*.{ts,js,tsx,jsx} || echo 'No files to format.'",
    "test": "echo \"No tests yet\"",
    "upd-deps": "ncu -u"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "dependencies": {
    "tsyringe": "^4.10.0",
    "rxjs": "^7.8.2",
    "discord.js": "^14.19.3",
    "glob": "^11.0.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@emilia-tan/types": "workspace:*",
    "@emilia-tan/config": "workspace:*",
    "typescript": "^5.8.3",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "@types/node": "^24.0.1"
  }
}