{
  "name": "@emilia-tan/core",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:module": "swc src -d dist --config-file ../../.swcrc",
    "build": "pnpm run build:module && pnpm run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts || echo 'No files to lint.'",
    "format": "prettier --write 'src/**/*.{ts,js,tsx,jsx}' || echo 'No files to format.'",
    "upd-deps": "ncu -u"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "dependencies": {
    "discord.js": "^14.20.0",
    "dotenv": "^16.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "eslint": "^9.29.0",
    "inversify": "^7.5.2",
    "prettier": "^3.6.0",
    "typescript": "^5.8.3"
  }
}
