{
  "name": "@emilia-tan/bot",
  "version": "13.0.1",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "swc src -d dist --copy-files",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts || echo 'No files to lint.'",
    "format": "prettier --write src/**/*.{ts,js,tsx,jsx} || echo 'No files to format.'",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "discord.js": "^14.19.1",
    "dotenv": "^16.5.0",
    "tsyringe": "^4.10.0",
    "rxjs": "^7.8.2",
    "reflect-metadata": "^0.2.2",
    "@emilia-tan/core": "workspace:^",
    "@emilia-tan/types": "workspace:^",
    "@emilia-tan/decorators": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "typescript": "^5.8.3",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.3",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "@biomejs/biome": "^1.9.4",
    "eslint-config-biome": "^1.9.4"
  },
  "optionalDependencies": {
    "@emilia-tan/logger": "workspace:^",
    "@emilia-tan/discord": "workspace:^",
    "@emilia-tan/media": "workspace:^",
    "@emilia-tan/database": "workspace:^",
    "@emilia-tan/network": "workspace:^"
  }
