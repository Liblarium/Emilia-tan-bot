{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": true,
    "include": [
      "srcTs/**/*.ts",
      "srcTs/**/*.js",
      "srcTs/**/*.d.ts",
      "types/**/*.d.ts"
    ],
    "ignore": [
      "srcJs/*",
      "abyss/*",
      "drizzle",
      "package.json",
      "node_modules/**"
    ]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "include": [
      "srcTs/**/*.ts",
      "srcTs/**/*.js",
      "srcTs/**/*.d.ts",
      "types/**/*.d.ts"
    ],
    "ignore": [
      "srcJs/*",
      "abyss/*",
      "package.json",
      "node_modules/*"
    ],
    "rules": {
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noCommaOperator": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "formatter": {
    "include": [
      "srcTs/**/*.ts",
      "srcTs/**/*.js",
      "srcTs/**/*.d.ts",
      "types/**/*.d.ts"
    ],
    "indentWidth": 2,
    "ignore": [
      "srcJs/*",
      "abyss/*",
      "package.json",
      "node_modules/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  }
}