{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "dist/*",
      "sandbox/*.js",
      "infrastructure/*",
      "package.json",
      "pnpm-lock.yaml",
      "node_modules/*",
      "apps/**/node_modules/*",
      "packages/**/node_modules/*",
      "oldCode/*",
      "biome.json"
    ],
    "include": [
      "apps/**/src/**/*",
      "packages/**/src/**/*",
      "*/src/**/*",
      "sandbox/*",
      "*.md",
      "docs/**/*.md"
    ]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "dist/*",
      "sandbox/*.js",
      "infrastructure/*",
      "package.json",
      "pnpm-lock.yaml",
      "node_modules/*",
      "apps/**/node_modules/*",
      "packages/**/node_modules/*",
      "oldCode/*",
      "biome.json"
    ],
    "include": [
      "apps/**/src/**/*",
      "packages/**/src/**/*",
      "*/src/**/*",
      "sandbox/*",
      "*.md",
      "docs/**/*.md"
    ],
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noUselessConstructor": "off",
        "noBannedTypes": "off"
      },
      "style": {
        "noCommaOperator": "off",
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off",
        "useLiteralEnumMembers": "off",
        "noInferrableTypes": "off",
        "useShorthandFunctionType": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "useValidTypeof": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "dist/*",
      "sandbox/*.js",
      "infrastructure/*",
      "package.json",
      "pnpm-lock.yaml",
      "node_modules/*",
      "apps/**/node_modules/*",
      "packages/**/node_modules/*",
      "*/node_modules/*",
      "oldCode/*",
      "biome.json"
    ],
    "include": [
      "apps/**/src/**/*",
      "packages/**/src/**/*",
      "*/src/**/*",
      "sandbox/*",
      "*.md",
      "docs/**/*.md"
    ],
    "useEditorconfig": true,
    "indentStyle": "space",
    "lineEnding": "crlf",
    "bracketSpacing": true,
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  }
}
