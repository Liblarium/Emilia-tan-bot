{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignoreUnknown": true,
		"include": [
			"src/**/*.ts",
			"src/**/*.js",
			"src/**/*.d.ts",
			"types/**/*.d.ts",
			"types/*.d.ts",
			"sanbox/**/*.ts",
			"sanbox/**/*.js",
			"sanbox/**/*.d.ts"
		],
		"ignore": [
			"dist/*",
			"sanbox/*.js",
			"prisma",
			"package.json",
			"node_modules/**",
			"oldCode"
		]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"include": [
			"src/**/*.ts",
			"src/**/*.js",
			"src/**/*.d.ts",
			"types/**/*.d.ts",
			"types/*.d.ts",
			"sanbox/**/*.ts",
			"sanbox/**/*.js",
			"sanbox/**/*.d.ts"
		],
		"ignore": [
			"dist/*",
			"sanbox/*.js",
			"prisma",
			"package.json",
			"node_modules/**",
			"oldCode"
		],
		"rules": {
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off",
				"noUselessConstructor": "off"
			},
			"style": {
				"noCommaOperator": "off",
				"noParameterAssign": "off",
				"useDefaultParameterLast": "off",
				"useLiteralEnumMembers": "off",
				"noInferrableTypes": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noAssignInExpressions": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"include": [
			"src/**/*.ts",
			"src/**/*.js",
			"src/**/*.d.ts",
			"types/**/*.d.ts",
			"types/*.d.ts",
			"sanbox/**/*.ts",
			"sanbox/**/*.js",
			"sanbox/**/*.d.ts"
		],
		"ignore": [
			"dist/*",
			"sanbox/*.js",
			"prisma",
			"package.json",
			"node_modules/**",
			"oldCode"
		]
	},
	"organizeImports": {
		"enabled": true
	}
}
