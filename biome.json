{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/apps/**/src/**/*",
      "**/packages/**/src/**/*",
      "**/*/src/**/*",
      "**/sandbox/**/*",
      "**/*.md",
      "**/docs/**/*.md",
      "!**/dist/**/*",
      "!**/sandbox/**/*.js",
      "!**/infrastructure/**/*",
      "!**/package.json",
      "!**/pnpm-lock.yaml",
      "!**/node_modules/**/*",
      "!**/apps/**/node_modules/**/*",
      "!**/packages/**/node_modules/**/*",
      "!**/oldCode/**/*",
      "!**/biome.json"
    ]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**/apps/**/src/**/*",
      "**/packages/**/src/**/*",
      "**/*/src/**/*",
      "**/sandbox/**/*",
      "**/*.md",
      "**/docs/**/*.md",
      "!**/dist/**/*",
      "!**/sandbox/**/*.js",
      "!**/infrastructure/**/*",
      "!**/package.json",
      "!**/pnpm-lock.yaml",
      "!**/node_modules/**/*",
      "!**/apps/**/node_modules/**/*",
      "!**/packages/**/node_modules/**/*",
      "!**/oldCode/**/*",
      "!**/biome.json"
    ],
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noUselessConstructor": "off",
        "noBannedTypes": "off",
        "noCommaOperator": "off"
      },
      "correctness": {
        "noVoidTypeReturn": "off",
        "useValidTypeof": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off",
        "useLiteralEnumMembers": "off",
        "noInferrableTypes": "off",
        "useShorthandFunctionType": "off",
        "useAsConstAssertion": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noUselessElse": "error"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "includes": [
      "**/apps/**/src/**/*",
      "**/packages/**/src/**/*",
      "**/*/src/**/*",
      "**/sandbox/**/*",
      "**/*.md",
      "**/docs/**/*.md",
      "!**/dist/**/*",
      "!**/sandbox/**/*.js",
      "!**/infrastructure/**/*",
      "!**/package.json",
      "!**/pnpm-lock.yaml",
      "!**/node_modules/**/*",
      "!**/apps/**/node_modules/**/*",
      "!**/packages/**/node_modules/**/*",
      "!**/*/node_modules/**/*",
      "!**/oldCode/**/*",
      "!**/biome.json"
    ],
    "useEditorconfig": true,
    "indentStyle": "space",
    "lineEnding": "crlf",
    "bracketSpacing": true,
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
