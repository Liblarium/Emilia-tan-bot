{
  "name": "emilia-tan-bot-monorepo",
  "private": true,
  "packageManager": "pnpm@10.12.3",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm run build:packages && pnpm run build:bot",
    "build:packages": "pnpm -r --filter ./packages/... run build",
    "build:bot": "pnpm --filter ./apps/emilia-tan run build",
    "start": "pnpm --filter @emilia-tan/bot start",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "test": "pnpm -r run test",
    "docs": "pnpm --filter @emilia-tan/bot run docs",
    "typecheck": "pnpm -r run typecheck",
    "new:package": "bash ./tools/scripts/new-package.sh",
    "new:package:win": "cmd /c tools\\scripts\\new-package.bat",
    "diff": "git diff > all_changes.diff",
    "upd-deps": "ncu -u && pnpm -r run upd-deps"
  },
  "lint-staged": {
    "**/*.{ts,js,yaml,yml,md}": [
      "biome format --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@eslint/js": "^9.29.0",
    "@nx/eslint": "^21.2.1",
    "@nx/js": "^21.2.1",
    "@nx/node": "^21.2.1",
    "@nx/workspace": "^21.2.1",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.6",
    "@swc/helpers": "^0.5.17",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-biome": "1.9.4",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "16.2.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "nx": "21.2.1",
    "prettier": "^3.6.0",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  }
}