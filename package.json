{
  "name": "emilia-tan-bot-monorepo",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "start": "pnpm --filter ./apps/bot start",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "prepare": "husky init",
    "lint-staged": "lint-staged",
    "test": "pnpm -r run test",
    "docs": "pnpm --filter ./apps/bot run docs"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,yaml,yml,md}": [
      "biome format --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.3",
    "typescript": "^5.8.3",
    "@biomejs/biome": "^1.9.4",
    "eslint": "^9.25.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-config-prettier": "10.1.2",
    "eslint-config-biome": "1.9.4",
    "@typescript-eslint/parser": "^8.31.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "jiti": "^2.4.2",
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.2",
    "globals": "16.0.0"
  }
}
