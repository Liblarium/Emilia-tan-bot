{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "mapRoot": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@type": [
        "types"
      ],
      "@type/*": [
        "types/*"
      ],
      "@client/pg": [
        "src/client/postgres.ts"
      ],
      "@client": [
        "src/client/index.ts"
      ],
      "@constants": [
        "src/constants/index.ts"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@log": [
        "src/log/index.ts"
      ],
      "@interaction": [
        "src/interaction/index.ts"
      ],
      "@handlers/*": [
        "src/handlers/*"
      ]
    }
  },
  "include": [
    "src",
    "node_modules/@types",
    "types",
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./oldCode",
    "./sandbox",
    "./prisma"
  ]
}