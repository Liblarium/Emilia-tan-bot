{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "mapRoot": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@type": [
        "types/index.d.ts"
      ],
      "@type/*": [
        "types/*.d.ts"
      ],
      "@client/pg": [
        "src/modules/client/postgres.ts"
      ],
      "@client": [
        "src/modules/client/index.ts"
      ],
      "@enum/*": [
        "src/modules/constants/enum/*.ts"
      ],
      "@abstract/*": [
        "src/modules/constants/abstract/*.ts"
      ],
      "@db/*": [
        "src/modules/database/*.ts"
      ],
      "@utils/*": [
        "src/modules/utils/*.ts"
      ],
      "@log": [
        "src/modules/log/index.ts"
      ],
      "@log/*": [
        "src/modules/log/*.ts"
      ],
      "@interaction/*": [
        "src/modules/interaction/*.ts"
      ],
      "@handlers/*": [
        "src/modules/handlers/*.ts"
      ],
      "@core/*": [
        "src/core/*.ts"
      ],
      "@command/*": [
        "src/command/*.ts"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src",
    "node_modules/@types",
    "types"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./oldCode",
    "./sandbox",
    "./prisma"
  ]
}