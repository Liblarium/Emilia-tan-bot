{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "mapRoot": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@type": [
        "types"
      ],
      "@type/*": [
        "types/*"
      ],
      "@client/pg": [
        "src/modules/client/postgres.ts"
      ],
      "@client": [
        "src/modules/client/index.ts"
      ],
      "@enum/*": [
        "src/modules/constants/enum/*"
      ],
      "@abstract/*": [
        "src/modules/constants/abstract/*"
      ],
      "@db/*": [
        "src/modules/database/*"
      ],
      "@utils/*": [
        "src/modules/utils/*"
      ],
      "@log": [
        "src/modules/log/index.ts"
      ],
      "@log/*": [
        "src/modules/log/*"
      ],
      "@interaction/*": [
        "src/modules/interaction/*"
      ],
      "@handlers/*": [
        "src/modules/handlers/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@command/*": [
        "src/command/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src",
    "node_modules/@types",
    "types"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./oldCode",
    "./sandbox",
    "./prisma"
  ]
}